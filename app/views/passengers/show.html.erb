<h1>Welcome, <%= @passenger.first_name %>!</h1>

<% if @passenger.reservations.any? %>
    <h2>Here are your current reservations:</h2>
      <ol> <% @passenger.reservations.each do |res| %>
            <li><h3>Your trip on <%= res.departure_date %> to <%= res.destination_city %> </h3></li>
            <%= link_to "View this Reservation", reservation_path(res) %>
          <%end%>
      </ol>
<% else %>
    <h2>You have no current reservations.</h2>
<% end %></ul><br><br>

<%= link_to "Book a Reservation", new_reservation_path %> <br>  
<%= link_to "Update your Account Information", edit_passenger_path %><br>   
<%= link_to "Logout", logout_path, method: "delete" %>  <br>
<%= link_to "Delete your Account", passenger_path(@passenger), method: "delete" %>
